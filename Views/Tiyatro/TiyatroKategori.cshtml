@model IEnumerable<Tiyatro_Takip.Models.Tiyatro>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Tiyatro Kategori</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    

    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <script src="~/Scripts/script/script.js"></script>
    <script src="~/Scripts/jquery-3.6.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        a{
            text-decoration:none;
          
        }
        .btn-primary {
            color: #fff;
            background-color: blue;
           border-color: blue;
        }
         .btn-primary :hover {
                color: #fff;
                background-color: blue;
                border-color: blue;
            }
        a:hover {
            text-decoration: none;
        }
    </style>
</head>
<body style="margin:15px;">
    <div class=" mt-5">
        <p style="font-size: 25px;" >
            @ViewBag.Title
        </p>
        <p style="font-size: 18px;  padding:2px; " class="btn btn-danger mb-3">
            @Html.ActionLink("Ekle", "Create")
        </p>
        <p style="font-size: 13px;">
            @Html.ActionLink("Ana Sayfaya Git", "Anasayfa","Home")
        </p>
        <table class="table table-striped table-bordered">
            <tr>
                <th scope="col" style="padding:15px; font-size:15px;">
                    @Html.DisplayNameFor(model => model.tiyatro_adi)
                </th>
                <th scope="col" style="padding:15px; font-size:15px; text-align:center;">
                    @Html.DisplayNameFor(model => model.aciklama)
                </th>
                <th scope="col" style="padding:15px; font-size:15px;">
                    @Html.DisplayNameFor(model => model.fiyat)
                </th>
                <th scope="col" style="padding:15px; font-size:15px;">
                    @Html.DisplayNameFor(model => model.Sahne_Turu1.sahne_türü)
                </th>
                <th scope="col" style="padding:15px;font-size:15px;">
                    @Html.DisplayNameFor(model => model.tiyatro_kategori.kategoriAdi)
                </th>
                <th scope="col" style="padding:15px;font-size:15px;">
                    @Html.DisplayNameFor(model => model.Tiyatro_Konusu.konu)
                </th>
                <th scope="col" style="padding:15px; font-size:15px;">
                    @Html.DisplayNameFor(model => model.seans_saati)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style=" font-size: 12px;">
                        @Html.DisplayFor(modelItem => item.tiyatro_adi)
                    </td>
                    <td style=" font-size:12px;">
                        @Html.DisplayFor(modelItem => item.aciklama)
                    </td>
                    <td style=" font-size:12px;">
                        @Html.DisplayFor(modelItem => item.fiyat)
                    </td>
                    <td style=" font-size:12px;">
                        @Html.DisplayFor(modelItem => item.Sahne_Turu1.sahne_türü)
                    </td>
                    <td style=" font-size:12px;">
                        @Html.DisplayFor(modelItem => item.tiyatro_kategori.kategoriAdi)
                    </td>
                    <td style=" font-size:12px;">
                        @Html.DisplayFor(modelItem => item.Tiyatro_Konusu.konu)
                    </td>
                    <td style=" font-size:12px;">
                        @Html.DisplayFor(modelItem => item.seans_saati)
                    </td>
                    <td style=" ">
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary mr-2", style = " " })
                        @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-warning", style = " margin-top:2px;" })
                        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger", style = " margin-top:2px; " })
                    </td>
                </tr>
            }

        </table>
    </div>

  
</body>
</html>
