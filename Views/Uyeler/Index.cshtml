@model List<Tiyatro_Takip.Models.Uyeler>

@{
    var ornekgrid = new WebGrid(source: Model, canPage: true, rowsPerPage: 10);
    ornekgrid.Pager(WebGridPagerModes.All);

}

<!DOCTYPE html>
<html>
<head>
    <title>Üyeler</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />


    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <script src="~/Scripts/script/script.js"></script>
    <script src="~/Scripts/jquery-3.6.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <style type="text/css">
        /*Burada grid için css ekleyeceğiz*/
        .webgrid-table {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            font-size: 1.2em;
            width: 100%;
            display: table;
            border-collapse: separate;
            border: solid 1px #ff800;
            background-color: white;
        }

            .webgrid-table td, th {
                border: 1px solid #ffd800;
                padding: 3px 7px 2px;
            }

        .webgrid-header {
            background-color: #ff6a00;
            color: #FFFFFF;
            padding-bottom: 4px;
            padding-top: 5px;
            text-align: left;
        }

        .webgrid-footer {
        }

        .webgrid-row-style {
            padding: 3px 7px 2px;
        }

        .webgrid-alternating-row {
            background-color: #FFC107;
            padding: 3px 7px 2px;
        }

        #b8 {
            background: red;
            margin-left: 10px;
            padding: 10px;
            width: 80px;
            font-size:15px;
        }

        h2, h3 {
            margin-left: 5px;
            margin-top: 10px;
        }
        #b8 {
            background: #ff6a00;
            margin-left: 10px;
            margin-bottom:5px;
            padding: 10px;
            width: 80px;
            font-size: 15px;
        }

       
        a {
            text-decoration: none;
            font-size: 15px;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container" style="margin-top:25px;">
        <h2 >Üyelerin Listesi</h2>
        <h3>Toplam Kayıt Sayısı: @ViewBag.TotalRows</h3>
        @using (Html.BeginForm("Index", "Uyeler", FormMethod.Get, new { @style = "height:50px" }))
        {
            <div style="margin-bottom:5px">


                <input style="margin-left: 10px; width: 300px; height: 45px; float: left" type="text" placeholder="Search" name="search" value="@ViewBag.search" />
                <button id="b8" style="float:left" type="submit" class="btn btn-main btn-round-full">Ara </button>
            </div>

        }

        <div id="content">
            @ornekgrid.GetHtml(
             tableStyle: "webgrid-table",
             headerStyle: "webgrid-header",
             footerStyle: "webgrid-footer",
             alternatingRowStyle: "webgrid-alternating-row",
             rowStyle: "webgrid-row-style",
             columns: ornekgrid.Columns(
             ornekgrid.Column(columnName: "UyeAdi", header: "Ad"),
             ornekgrid.Column(columnName: "UyeSoyadi", header: "Soyad"),
             ornekgrid.Column(columnName: "UyeTc", header: "TC"),
             ornekgrid.Column(columnName: "UyeTel", header: "Telefon"),
             ornekgrid.Column(columnName: "UyeAdres", header: "Adres")))

        </div>


    </div>

   
   




